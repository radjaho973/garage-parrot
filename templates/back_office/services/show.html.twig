{% extends '/back_office/base_back_office.html.twig' %}

{% block title %} {{service.name}} {% endblock %}

{% block body %}
<div class="col-9">
    <h1>Services</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom du service</th>
                <td>{{ service.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ service.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img style="width: 50px" src="{{ asset('service_uploads/' ~ service.picture_src)}}"></td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex gap-3" >
        <a class="btn btn-primary" href="{{ path('app_services_index') }}">Retour</a>

        <a  class="btn btn-warning" href="{{ path('app_services_edit', {'id': service.id}) }}">Modifier</a>

        {{ include('back_office/services/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
