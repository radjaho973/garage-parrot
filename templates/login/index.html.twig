{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}


<div class="login_container h-50 d-flex justify-content-center align-items-center">
 
        {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<div class="container">
    <form  class="mb-3" action="{{ path('app_login') }}" method="post">
        <label class="fomr_label" for="username">Email:</label>
        <input  class="form-control" required="required" type="text" id="username" name="_username" value="{{ last_username }}">

        <label class="fomr_label" for="password">Password:</label>
        <input  class="form-control" required="required" type="password" id="password" name="_password">

        {# If you want to control the URL the user is redirected to on success #}
        <input type="hidden" name="_target_path" value="/login-redirect">

         <input   type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-primary" type="submit">Se Connecter</button>
    </form>
</div>

  
{% endblock %}
